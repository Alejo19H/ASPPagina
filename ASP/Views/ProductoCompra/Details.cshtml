@model ASP.Models.producto_compra

@{
    ViewBag.Title = "Detalles Producto Compra";
}

<h2>Detalles</h2>

<div>
    <h4>Producto Compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Codigo Compra
        </dt>

        <dd>
            @ASP.Controllers.ProductoCompraController.NombreCompra(Model.id_compra)
        </dd>

        <dt>
            Producto
        </dt>

        <dd>
            @ASP.Controllers.ProductoCompraController.NombreProducto(Model.id_producto)
        </dd>

        <dt>
            Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Ver Todos", "Index")
</p>
